WindowManager:
    NameWindow:
    AskWindow: 
    ModeWindow:
    WriteWindow:
    TrainWindow:
    
<NameWindow>
    size: root.width, root.height
    name: "name"
    name_of_user: name_of_user
    FloatLayout:
        TextInput:
            id :name_of_user
            size_hint: 0.8, 0.15
            pos_hint: {"x":0.2, "top":1}
            multiline: False
        Label:
            text: "zadaj svoje meno"
            size_hint: 0.2, 0.15
            pos_hint: {"x":0 ,"top":1}
        Button:
            size_hint: 0.2, 0.2
            pos_hint: {"x":0.2, "top":0.5}
            text: "next"

            on_press:
                root.btn()
                app.root.current = "ask" 
                root.manager.transition.direction = "left"
        Button:
            size_hint: 0.2, 0.2
            pos_hint: {"x":0.4, "top":0.5}
            text: "upload"
            on_press:
                root.upload()
        Button:
            size_hint: 0.2, 0.2
            text: "download"
            pos_hint: {"x":0.6, "top":0.5}
            on_press:
                root.download()
        Button:
            size_hint: 0.2, 0.2
            pos_hint: {"x":0, "top":0.5}
            text: "delete"
            on_press:
                root.delete()



<ModeWindow>
    name: "mode"
    
    FloatLayout:

        size: root.width, root.height
        Button: 
            text: "Mode = Write"
            size_hint: 0.8,0.5
            pos_hint: {"x":0,"top":1}
            
            on_release:
                app.root.current = "write" 
                root.manager.transition.direction = "left"


        Button:
            
            pos_hint: {"x":0,"top":0.5}
            size_hint:0.8,0.5
            text: "Mode = Train"
            background_color: 0.3, 0.4, 0.5, 1
            
            
            on_press:
            
                
                root.btn() 
                    

        Button:
            pos_hint:{"x":0.8, "top":1}
            size_hint: 0.2, 1
            text: "back"
            on_release:
                app.root.current = "ask"
                root.manager.transition.direction = "right"
        
<WriteWindow>
    name : "write"
    word: word
    translated_word:translated_word
    on_enter: root.focus()
    FloatLayout:

        size: root.width, root.height
        TextInput: 
            id: word
            size_hint: 0.8,0.5
            pos_hint: {"x":0,"top":1}
            multiline : False
            

        Label:
            id : translated_word
            size_hint: 0.2, 0.5
            pos_hint: {"x":0.8, "top":1}
            text : ""
        Button:
            
            pos_hint: {"x":0,"top":0.5}
            size_hint:0.5,0.5
            text: "enter"
            background_color: 0.3, 0.4, 0.5, 1


            on_press: 
                root.btn()
            on_release:
                root.focus()
        Button:
            pos_hint: {"x":0.5, "top":0.5}
            size_hint: 0.2, 0.5
            text: "back"
            on_release:
                app.root.current = "mode"
                root.manager.transition.direction = "right"
        Button:
            pos_hint: {"x":0.7, "top":0.5}
            size_hint: 0.3, 0.5
            text: "translate_untranslated"
            on_press:
                root.translate_untranslated()
<AskWindow>
    name: "ask"
    f: f
    to : to
    from_lan : from_lan
    size: root.width, root.height
    FloatLayout:
        
        TextInput:
            id: f
            size_hint: 0.8,0.25
            pos_hint: {"x":0.2,"top":1}
            multiline : False
        TextInput:
            id: to
            size_hint: 0.8,0.25
            pos_hint: {"x":0.2,"top":0.75}
            multiline : False
        TextInput:
            id: from_lan
            size_hint: 0.8,0.25
            pos_hint: {"x":0.2,"top":0.5}
            multiline : False
        Button:
            size_hint: 1,0.25
            pos_hint: {"x":0,"top":0.25}
            text: "enter"

            on_press: 
                root.btn()
                
                
        Label:
            size_hint: 0.2,0.25
            pos_hint: {"x":0,"top":1}
            text: "file: "
        Label:
            size_hint: 0.2,0.25
            pos_hint: {"x":0,"top":0.75}
            text:"do jazyka: "
        Label:
            size_hint: 0.2,0.25
            pos_hint: {"x":0,"top":0.50}
            text:"z jazyka: "

<TrainWindow>
    name: "train"
    question: question
    accuracy: accuracy
    answer:answer
    size: root.width, root.height
    
    on_enter: root.show()
    on_enter: root.focus()



    FloatLayout:
        Label:
            id: question
            pos_hint: {"x":0, "top":1}
            text: ""
            size_hint:0.5,0.4
        Label:
            id: accuracy
            pos_hint: {"x":0.5, "top":1}
            size_hint: 0.5, 0.4      
            text: "tu bude spravna odpoved"
        
            
        TextInput:
            id: answer
            pos_hint: {"x":0, "top":0.6}
            size_hint: 1, 0.4
            focus: True
            
        Button:
            size_hint: 0.8, 0.2
            pos_hint: {"x":0, "top":0.2}
            on_press: root.train()
            on_release: root.focus()
        Button:
            pos_hint: {"x":0.8, "top":0.2}
            size_hint:0.2, 0.2
            text: "back"
            on_press:
                root.delete()
            on_release:
                app.root.current = "mode"
                root.manager.transition.direction = "right"
            





