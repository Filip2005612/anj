            size_hint: 0.8,0.25
            pos_hint: {"x":0.2,"top":0.75}
            multiline : False
        TextInput:
            id: from_lan
            size_hint: 0.8,0.25
            pos_hint: {"x":0.2,"top":0.5}
            multiline : False
        Button:
            size_hint: 0.8,0.25
            pos_hint: {"x":0,"top":0.25}
            text: "enter"

            on_press: 
                root.btn()
        Button:
            size_hint: 0.2,0.25
            pos_hint: {"x":0.8,"top":0.25}
            text: "back"
            on_release:
                app.root.current = "file_window"
                root.manager.transition.direction = "right"

        
                
                
        Label:
            size_hint: 0.2,0.25
            pos_hint: {"x":0,"top":1}
            text: "file: "
        Label:
            size_hint: 0.2,0.25
            pos_hint: {"x":0,"top":0.75}
            text:"do jazyka: "
        Label:
            size_hint: 0.2,0.25
            pos_hint: {"x":0,"top":0.50}
            text:"z jazyka: "

<TrainWindow>
    name: "train"
    question: question
    accuracy: accuracy
    answer:answer
    size: root.width, root.height
    
    on_enter: root.train('TrainWindow')

    on_enter: root.focus()
    



    FloatLayout:
        Label:
            id: question
            pos_hint: {"x":0, "top":1}
            text: ""
            size_hint:0.5,0.4
        Label:
            id: accuracy
            pos_hint: {"x":0.5, "top":1}
            size_hint: 0.5, 0.4      
            text: "tu bude spravna odpoved"
        
            
        TextInput:
            id: answer
            pos_hint: {"x":0, "top":0.6}
            size_hint: 1, 0.4
            
            
        Button:
            size_hint: 0.8, 0.2
            pos_hint: {"x":0, "top":0.2}
            on_press: root.train("TrainWindow")
                
            on_press: root.next_word()

            on_release: root.focus()

        Button:
            pos_hint: {"x":0.8, "top":0.2}
            size_hint:0.2, 0.2
            text: "back"
            on_press:
                root.delete("TrainWindow")
            on_release:
                app.root.current = "mode"
                root.manager.transition.direction = "right"
            

