WindowManager:
    RegisterWindow:
    LoginWindow:
    FileWindow:
    AskWindow: 
    EnterFileWindow:
    ModeWindow:
    WriteWindow:
    TrainWindow:
    Train_with_brain_window:
    Append_window:
    Manage_window:
<RegisterWindow>
    size: root.width, root.height
    name: "register"
    name_of_user: name_of_user
    password: password
    email :email
    FloatLayout:
        Label:
            
            text: "zadaj svoje meno"
            size_hint: 0.2, 0.15
            pos_hint: {"x":0 ,"top":1}
        TextInput:
            id :name_of_user
            size_hint: 0.8, 0.15
            pos_hint: {"x":0.2, "top":1}
            multiline: False
        Label:
            text: "zadaj svoje heslo"
            size_hint: 0.2, 0.15
            pos_hint: {"x":0 ,"top":0.7}
        TextInput:
            id : password
            size_hint: 0.8, 0.15
            pos_hint: {"x":0.2, "top":0.7}
            multiline: False
        Label:
            text: "zadaj svoj email"
            size_hint: 0.2, 0.15
            pos_hint: {"x":0 ,"top":0.4}
        TextInput:
            id :email
            size_hint: 0.8, 0.15
            pos_hint: {"x":0.2, "top":0.4}
            multiline: False
        Button:
            size_hint: 0.1, 0.1
            pos_hint: {"x":0.1, "top":0.1}
            text: "Enter"
            on_press:
                root.register()
                
        Button:
            size_hint: 0.1, 0.1
            pos_hint: {"x":0, "top":0.1}
            text: "Login"
            on_press:
                app.root.current = "login" 
                root.manager.transition.direction = "left"

<LoginWindow>
    size: root.width, root.height
    name: "login"
    email: email
    password: password
    FloatLayout:
        TextInput:
            id : email
            size_hint: 0.8, 0.15
            pos_hint: {"x":0.2, "top":1}
            multiline: False
        Label:
            text: "zadaj svoj email"
            size_hint: 0.2, 0.15
            pos_hint: {"x":0 ,"top":1}
        TextInput:
            id :password    
            size_hint: 0.8, 0.15
            pos_hint: {"x":0.2, "top":0.8}
            multiline: False
        Label:
            text: "heslo"
            size_hint: 0.2, 0.15
            pos_hint: {"x":0 ,"top":0.8}
        Button:
            size_hint: 0.2, 0.2
            pos_hint: {"x":0.2, "top":0.5}
            text: "next"

            on_press:
                root.login()
                
        Button:
            size_hint: 0.2, 0.2
            pos_hint: {"x":0.4, "top":0.5}
            text: "upload"
            on_press:
                root.upload()
        Button:
            size_hint: 0.2, 0.2
            text: "download"
            pos_hint: {"x":0.6, "top":0.5}
            on_press:
                root.download()
        Button:
            size_hint: 0.2, 0.2
            pos_hint: {"x":0, "top":0.5}
            text: "delete"
            on_press:
                root.delete()



<ModeWindow>
    name: "mode"
    
    FloatLayout:

        size: root.width, root.height
        Button: 
            text: "Mode = Write"
            size_hint: 0.8,0.2
            pos_hint: {"x":0,"top":1}
            
            on_release:
                app.root.current = "write" 
                root.manager.transition.direction = "left"


        Button:
            
            pos_hint: {"x":0,"top":0.8}
            size_hint:0.8,0.2
            text: "Mode = Train"
            background_color: 0.3, 0.4, 0.5, 1
            on_press: root.train()
                    
        Button:

            pos_hint: {"x":0, "top":0.6}
            size_hint: 0.8, 0.2
            text: "Mode = Train_with_brain"
            on_press: root.train_with_brain()




        Button:
            pos_hint:{"x":0, "top":0.4}
            size_hint: 0.2, 0.4
            text: "Append mode"
            on_release:
                app.root.current = "append"
                root.manager.transition.direction = "right"
        Button:
            pos_hint:{"x":0.4, "top":0.4}
            size_hint: 0.2, 0.4
            text: "Manage mode"
            on_release:
                app.root.current = "manage"
                root.manager.transition.direction = "right"
            

        Button:
            pos_hint:{"x":0.8, "top":1}
            size_hint: 0.2, 1
            text: "back"
            on_release:
                app.root.current = "ask"
                root.manager.transition.direction = "right"
        
        
<WriteWindow>
    name : "write"
    word: word
    translated_word:translated_word
    on_enter: root.focus()
    FloatLayout:

        size: root.width, root.height
        TextInput: 
            id: word
            size_hint: 0.8,0.5
            pos_hint: {"x":0,"top":1}
            multiline : False
            

        Label:
            id : translated_word
            size_hint: 0.2, 0.5
            pos_hint: {"x":0.8, "top":1}
            text : ""
        Button:
            
            pos_hint: {"x":0,"top":0.5}
            size_hint:0.5,0.5
            text: "enter"
            background_color: 0.3, 0.4, 0.5, 1


            on_press: 
                root.btn()
            on_release:
                root.focus()
        Button:
            pos_hint: {"x":0.5, "top":0.5}
            size_hint: 0.2, 0.5
            text: "back"
            on_release:
                app.root.current = "mode"
                root.manager.transition.direction = "right"
        Button:
            pos_hint: {"x":0.7, "top":0.5}
            size_hint: 0.3, 0.5
            text: "translate_untranslated"
            on_press:
                root.translate_untranslated()
<FileWindow>
    name: "file_window"
    size: root.width, root.height
    FloatLayout:
        Button:
            pos_hint: {"x":0.0, "top":0.2}
            size_hint:0.2, 0.2
            text: "New file"
            on_release:
                app.root.current = "ask"
                root.manager.transition.direction = "right"
        Button:
            pos_hint: {"x":0.8, "top":0.2}
            size_hint:0.2, 0.2
            text: "Enter to existing file"
            on_release:
                app.root.current = "enter_file"
                root.manager.transition.direction = "right"
        Button:
            pos_hint: {"x":0.4, "top":0.2}
            size_hint:0.2, 0.2
            text: "login"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "right"
        Button:
            pos_hint: {"x":0.6, "top":0.2}
            size_hint:0.2, 0.2
            text: "register"
            on_release:
                app.root.current = "register"
                root.manager.transition.direction = "right"
<EnterFileWindow>
    name: "enter_file"
    size: root.width, root.height
    on_enter: root.show_boards()
    board:board
    label : label
    
    FloatLayout:
        
        Label:
            id: label
            text: ""
            pos_hint: {"x":0, "top":1}
            size_hint:0.2, 1
            
        TextInput:
            id: board
            pos_hint: {"x":0.2, "top":1}
            size_hint:0.8, 0.5
        Button:
            size_hint: 0.2,0.25
            pos_hint: {"x":0.6,"top":0.25}
            text: "enter"
            on_press: root.btn()
        Button:
            size_hint: 0.2,0.25
            pos_hint: {"x":0.8,"top":0.5}
            text: "turn"
            on_press: root.turn()
        
        Button:
            size_hint: 0.2,0.25
            pos_hint: {"x":0.8,"top":0.25}
            text: "back"
            on_release:
                app.root.current = "file_window"
                root.manager.transition.direction = "right"
<AskWindow>
